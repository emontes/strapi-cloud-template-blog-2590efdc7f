{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Product information with hierarchical categorization"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "blocks"
    },
    "curatorNote": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "productUrl": {
      "type": "string"
    },
    "youtubeUrl": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "productTypes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-type.product-type",
      "inversedBy": "products"
    },
    "celebrities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::celebrity.celebrity",
      "inversedBy": "products"
    },
    "celebritySightings": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::celebrity-sighting.celebrity-sighting",
      "mappedBy": "products"
    },
    "sightings": {
      "type": "component",
      "component": "sighting.sighting-entry",
      "repeatable": true
    },
    "trending_products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::trending-product.trending-product",
      "mappedBy": "linked_product"
    }
  }
}
